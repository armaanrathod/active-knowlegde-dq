<body class="light-mode">
  <!-- Theme Switch Panel -->
  <div id="theme-panel">
    <div>Theme:</div>
    <button id="theme-toggle">ðŸŒž Light</button>
  </div>

  <!-- Content inside frame -->
  <div class="frame" id="main-frame">
    <textarea id="article" placeholder="Paste your article here..."></textarea>
    <br>
    <!-- PDF upload -->
    <input type="file" id="pdf-upload" accept=".pdf">
    <div id="pdf-name"></div>
    <!-- Generate Debate button -->
    <br>
    <button id="generate-btn">Start Debate</button>
  </div>

  <!-- Debate Section -->
  <div id="debate-container">
    <div id="person-left" style="background-image:url('person1.jpg');"></div>
    <div id="script-box">Debate will appear here...</div>
    <div id="person-right" style="background-image:url('person2.jpg');"></div>
  </div>

  <!-- User Questions Section -->
  <div id="user-questions-container">
    <h3>Continue Debate?</h3>
    <div id="questions-list"></div>
    <div id="status-display"></div>
    <div style="margin-top: 20px;">
      <button id="continue-yes-btn">Yes, Continue</button>
      <button id="continue-no-btn">No, End Debate</button>
    </div>
  </div>

  <!-- User opinion + toggle -->
  <div id="user-opinion-container">
    <input type="text" id="user-opinion" placeholder="Share your opinion...">
    <button id="for-against-toggle">For</button>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.102/pdf.min.js"></script>
  <script>
    const pdfUpload = document.getElementById("pdf-upload");
    const textarea = document.getElementById("article");
    const pdfName = document.getElementById("pdf-name");
    const themeToggle = document.getElementById("theme-toggle");
    const body = document.body;

    const generateBtn = document.getElementById("generate-btn");
    const mainFrame = document.getElementById("main-frame");
    const debateContainer = document.getElementById("debate-container");
    const scriptBox = document.getElementById("script-box");
    const forAgainstToggle = document.getElementById("for-against-toggle");
    const userOpinionContainer = document.getElementById("user-opinion-container");
    const userOpinion = document.getElementById("user-opinion");
    const userQuestionsContainer = document.getElementById("user-questions-container");
    const questionsList = document.getElementById("questions-list");
    const statusDisplay = document.getElementById("status-display");
    const continueYesBtn = document.getElementById("continue-yes-btn");
    const continueNoBtn = document.getElementById("continue-no-btn");
    
    let currentSide = "For";
    let debateActive = false;

    // PDF upload logic
    pdfUpload.addEventListener("change", async (e) => {
      const file = e.target.files[0];
      if (file) {
        pdfName.textContent = `Uploaded: ${file.name}`;
        const fileReader = new FileReader();
        fileReader.onload = async function() {
          const typedarray = new Uint8Array(this.result);
          const pdf = await pdfjsLib.getDocument(typedarray).promise;
          let textContent = "";
          for (let i = 1; i <= pdf.numPages; i++) {
            const page = await pdf.getPage(i);
            const text = await page.getTextContent();
            text.items.forEach(item => {
              textContent += item.str + " ";
            });
            textContent += "\n\n";
          }
          textarea.value = textContent;
        };
        fileReader.readAsArrayBuffer(file);
      }
    });

    // Theme toggle
    themeToggle.addEventListener("click", () => {
      if (body.classList.contains("light-mode")) {
        body.classList.remove("light-mode");
        body.classList.add("dark-mode");
        themeToggle.textContent = "ðŸŒ™ Dark";
      } else {
        body.classList.remove("dark-mode");
        body.classList.add("light-mode");
        themeToggle.textContent = "ðŸŒž Light";
      }
    });

    // Start debate
    generateBtn.addEventListener("click", async () => {
      const articleText = textarea.value.trim();
      if (!articleText) {
        alert("Please enter article text first!");
        return;
      }

      // Hide input elements
      pdfUpload.style.display = "none";
      textarea.style.display = "none";
      pdfName.style.display = "none";
      generateBtn.style.display = "none";

      mainFrame.classList.add("active");
      debateContainer.style.display = "flex";
      
      scriptBox.innerHTML = "Generating debate...";
      
      try {
        const response = await fetch("http://localhost:5000/start_debate", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ article: articleText })
        });

        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }

        const reader = response.body.getReader();
        const decoder = new TextDecoder();
        let result = "";

        while (true) {
          const { done, value } = await reader.read();
          if (done) break;
          result += decoder.decode(value, { stream: true });
          scriptBox.innerHTML = result.replace(/\n/g, '<br>');
          scriptBox.scrollTop = scriptBox.scrollHeight;
        }

        debateActive = true;
        // Show user questions after initial debate
        setTimeout(() => showUserQuestions(), 2000);

      } catch (error) {
        scriptBox.innerHTML = `Error: ${error.message}`;
      }
    });

    // Show user questions
    async function showUserQuestions() {
      try {
        const response = await fetch("http://localhost:5000/get_user_questions");
        const data = await response.json();
        
        if (data.below_threshold) {
          userQuestionsContainer.style.display = "block";
          questionsList.innerHTML = `
            <div class="question">
              <p><strong>Debate Complete!</strong></p>
              <p>The debate has reached the relevance threshold (${data.current_relevance.toFixed(1)}% relevance).</p>
              <p>Total rounds completed: ${data.round_count}</p>
            </div>
          `;
          continueYesBtn.style.display = "none";
          continueNoBtn.textContent = "Close";
          return;
        }

        userQuestionsContainer.style.display = "block";
        
        let questionsHtml = "";
        data.questions.forEach((question, index) => {
          questionsHtml += `
            <div class="question">
              <p><strong>Question ${index + 1}:</strong> ${question}</p>
            </div>
          `;
        });
        
        questionsList.innerHTML = questionsHtml;
        statusDisplay.innerHTML = `
          <p><strong>Status:</strong> Round ${data.round_count} | Relevance: ${data.current_relevance.toFixed(1)}%</p>
        `;

      } catch (error) {
        console.error("Error fetching questions:", error);
      }
    }

    // Continue debate
    continueYesBtn.addEventListener("click", async () => {
      userQuestionsContainer.style.display = "none";
      scriptBox.innerHTML += "<br><br>Generating additional arguments...";
      
      try {
        const response = await fetch("http://localhost:5000/continue_debate", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ side: currentSide })
        });

        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }

        const contentType = response.headers.get("content-type");
        
        if (contentType && contentType.includes("application/json")) {
          // Handle JSON response (threshold reached)
          const data = await response.json();
          scriptBox.innerHTML += `<br><br><strong>${data.message}</strong><br>Final Relevance: ${data.final_relevance.toFixed(1)}%<br>Total Rounds: ${data.total_rounds}`;
          debateActive = false;
        } else {
          // Handle streaming response
          const reader = response.body.getReader();
          const decoder = new TextDecoder();
          let result = "";

          while (true) {
            const { done, value } = await reader.read();
            if (done) break;
            result += decoder.decode(value, { stream: true });
            scriptBox.innerHTML = scriptBox.innerHTML.replace("Generating additional arguments...", "") + "<br><br>" + result.replace(/\n/g, '<br>');
            scriptBox.scrollTop = scriptBox.scrollHeight;
          }

          // Show questions again for next round
          setTimeout(() => showUserQuestions(), 2000);
        }

      } catch (error) {
        scriptBox.innerHTML += `<br><br>Error: ${error.message}`;
      }
    });

    // End debate
    continueNoBtn.addEventListener("click", () => {
      userQuestionsContainer.style.display = "none";
      if (debateActive) {
        scriptBox.innerHTML += "<br><br><strong>Debate ended by user.</strong>";
        debateActive = false;
      }
    });

    // Toggle For/Against
    forAgainstToggle.addEventListener("click", () => {
      currentSide = currentSide === "For" ? "Against" : "For";
      forAgainstToggle.textContent = currentSide;
    });
  </script>
</body>
</html>
